{% for flashMessage in app.session.flashbag.get('error') %}

    <script type="text/javascript">
        $(document).ready(function () {
                $.toast({
                    heading: 'Hata',
                    text: '{{ flashMessage }}',
                    position: 'top-right',
                    loaderBg: '#fff',
                    icon: 'error',
                    hideAfter: 3500,
                    stack: 6
                });
        });
    </script>

{% endfor %}
